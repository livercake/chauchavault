<div class="logged_header main_header single">
    <div class="balance-container container">
        <span class="pull-right ltc-balance" id="ltc-balance">0.0000 {{coin_symbol}}</span>
    </div>

    <div class="container logged-in-bar" >
        <!-- Nav tabs -->
        <ul class="nav nav-tabs" role="tablist">
            <li><a href="#home" role="tab" data-toggle="tab">{{i18n "Home"}}</a></li>
            <li><a href="#tab_transactions" role="tab" data-toggle="tab">{{i18n "Transactions"}}</a></li>
            <li><a href="#tab_send_coins" role="tab" data-toggle="tab">{{i18n "Send"}}</a></li>
            <li class="active"><a href="#tab_addresses" role="tab" data-toggle="tab">{{i18n "Receive (manage addresses)"}}</a></li>
            <li><a href="#tab_import_export" role="tab" data-toggle="tab">{{i18n "Import/Export"}}</a></li>
            <li><a href="#tab_settings" role="tab" data-toggle="tab">{{i18n "Settings"}}</a></li>
        </ul>
    </div>
</div>
<div class="container">
    <br><br>
    <div class="row">
        <div class="col-xs-12" id="alerts-section">

        </div>
    </div>


    <!-- Tab panes -->
    <div class="tab-content">
        <div class="tab-pane" id="home">...</div>
        <div class="tab-pane" id="tab_transactions">
            <h4>{{i18n "Your Transactions"}}</h4>

            <table id="list-transactions-outer" class="table table-responsive table-bordered">
                <thead>
                <th>{{i18n "Date"}}</th>
                <th>{{i18n "Amount"}}</th>
                <th>{{i18n "Your Address"}}</th>
                <th>{{i18n "Confirmations"}}</th>
                <th>{{i18n "View"}}</th>
                </thead>
                <tbody id="list-transactions">
                    <tr><td colspan="5">{{i18n "Error loading transactions?"}}</td></tr>
                </tbody>
            </table>
        </div>
        
        <div class="tab-pane active" id="tab_addresses">
          <button class="btn btn-default generate-btn" >{{i18n "Generate New Address"}}</button>
          <div id="list-addresses" class="container">
            {{i18n "Error loading addresses?"}}
          </div>
            <button class="btn btn-default generate-btn">{{i18n "Generate New Address"}}</button>
        </div>

        <div class="tab-pane" id="tab_send_coins">
            <div class="row">
                <div class="col-md-6">
                    <div class="alert alert-danger">{{i18n "Note: You will get an error if you try to send multiple transactions in a short period of time. This is because you cannot send unconfirmed coins yet."}}</div>


                    <!-- <h4>Exchange Rates</h4>
                    <ul id="exchange-rates">
                        <li>Under Construction</li>
                    </ul> -->
                </div>

                <div class="col-md-6">
                    <h4>{{i18n "Send"}} {{coin_symbol}}</h4>
                    <div class="input-group-lg">
                        <label for="from-address">{{i18n "From Address"}}</label>
                        <select name="my-addresses" id="select-my-addresses" class="form-control"></select>
                    </div>
                    <div class="row">
                        <div class="col-md-8">
                            <div class="input-group form-inline">
                                <label for="to-address">{{i18n "Recipient Address"}}</label>
                                <input type="text" class="form-control" id="to-address"/>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="input-group form-inline">
                                <label for="to-address">{{i18n "Amount to send"}}</label>
                                <input type="text" class="form-control" id="send-coins-amount" placeholder="0.0000"/>
                            </div>
                        </div>
                    </div>

                    <hr/>
                    <button class="btn btn-default" id="send-coins-btn">{{i18n "Send Coins"}}</button>
                    &nbsp;
                </div>

